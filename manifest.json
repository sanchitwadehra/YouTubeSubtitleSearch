{
    "manifest_version": 3,
    "name": "YouTube Subtitle Search",
    "version": "1.0",
    "description": "Search through YouTube video subtitles with keyboard shortcuts",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "*://*.youtube.com/*"
    ],
    "background": {
      "service_worker": "src/js/background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["src/js/content.js"],
        "type": "module"
      }
    ],
    "action": {
      "default_icon": "/Icon_Youtube_Subtitle_Search_Transparent.png"
    },
    "commands": {
      "open-search": {
        "suggested_key": {
          "default": "Ctrl+K"
        },
        "description": "Open the subtitle search box"
      }
    },
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  